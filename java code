package myexercise;
import java.sql.*;

class DatabaseFactory {
    public static void main(String [] args)
    {
         DatabaseFactory DF = new DatabaseFactory();
         DF.execute();
    }
    private Statement st;
    private Connection con;
    private ResultSet rs;

    public void connect() {
        if (con == null) {
            try {
                Class.forName("com.mysql.cj.jdbc.Driver");

                String url = "jdbc:mysql://localhost:3306/deneme?useUnicode=true&useJDBCCompliantTimezoneShift=true&useLegacyDatetimeCode=false&serverTimezone=UTC";
                String user = "root";
                String password = "meltem7997";
                con = DriverManager.getConnection(url, user, password);

                st = con.createStatement();

                System.out.println("database connected");

            } catch (ClassNotFoundException | SQLException e) {
                e.printStackTrace();
            }
        }
    }

    public void execute() {
        try {
            //ogrenci tablomuzu dolduruyoruz.
            java.util.Scanner kb = new java.util.Scanner(System.in);
            String sql = "";
            connect();

                System.out.print("Student name:");
                String name = kb.nextLine();
                System.out.print("Student surname:");
                String surname = kb.nextLine();

                sql = String.format("INSERT INTO ogrenci VALUES(7 , '%s', '%s')", name, surname);
                st.executeUpdate(sql);
        }
            catch (SQLException e) {
                e.printStackTrace();
            }
    }
    public void die() {
        if (con != null) {
            try {
                con.close();
                con = null;
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
    }
}


